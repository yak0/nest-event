    "@nestjs/core": "^9.4.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.4.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.7",
    "jest": "^29.5.0",
    "rxjs": "^7.8.1",
    "ts-jest": "^29.1.0",
